<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>
<div class="panel panel-default fill-space">
  <div class="panel-heading">
    <div class="pull-right"><%= link_to "New Chatroom", new_chatroom_path, class: "btn btn-primary ", style: "margin-top:10px" %>
    </div>
    <h3>Chatrooms</h3>
  </div>
    <div class="panel-body">
      <div class="box box-info">
        <% @chatrooms.each do |chatroom| %>
          <div class="box-body">
            <div class="col-sm-4 tital" ><p class="font-large"><%= chatroom.name %></p></div>
            <% if chatroom.users.count >= chatroom.room_size %>
              <div class="col-sm-2">
                <p class="font-large">FULL</p>
              </div>
            <% else %>
              <div class="col-sm-2">
                <p class="font-large"><%= "#{chatroom.users.count}/#{chatroom.room_size}" %></p>
              </div>
            <% end %>
            <div class="col-sm-2"><%= link_to 'Edit', edit_chatroom_path(chatroom), class: 'btn btn-outline-white btn-rounded font-large' %></div>
            <div class="col-sm-2"><%= link_to 'Join', chatroom_chatroom_users_path(chatroom), method: :post, class: 'btn btn-outline-white btn-rounded font-large' %></div>
            <div class="col-sm-1">
              <% if chatroom.owner == current_user %>
                <%= link_to 'Delete', chatroom_path(chatroom), method: :delete, class: 'btn btn-outline-white btn-rounded font-large' %>
              <% end %>
            </div>
            <div class="col-sm-1"><%= link_to '<i class="fa fa-times" style="color:#F6546A" aria-hidden="true"></i>'.html_safe, chatroom_chatroom_users_path(chatroom), method: :delete, class: 'btn btn-outline-white btn-rounded font-large' %></div>
            <div class="clearfix"></div>
            <div class="bot-border"></div>
          </div>
        <% end %>
      </div>
    </div>
</div>
<br>

